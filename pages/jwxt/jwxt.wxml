<view class="page-wrapper">
  <navbar mode="menu"></navbar>
  <view class="selector">
    <view bindtap="toggleSelector" class="n-text select-btn {{selectorIsLeft?'selected':''}}">查询考试</view>
    <view bindtap="toggleSelector" class="n-text select-btn {{selectorIsLeft?'':'selected'}}" style="margin-left:40rpx;">查询成绩</view>
  </view>
  <view class="container">
    <!-- 考试 -->
    <view class="exam {{selectorIsLeft?'show':'unshow'}} transition">
      <!-- wx:for -->
      <view class="exam-item n-text" wx:for="{{5}}">
        <view class="exam-time l-text">72天</view>
        <view class="exam-info">
          <view class="exam-name s-text">热工</view>
          <view class="exam-location s-text">教5B401</view>
          <view class="exam-date s-text">2019.01.22</view>
        </view>
      </view>
      <view class="none exam-item n-text">暂时没有考试 ~~</view>
    </view>
    <!-- 成绩 -->
    <view class="grade {{selectorIsLeft?'unshow':'show'}} transition margin-top">
      <view class="grade-list">
        <view class="grade-item n-text" wx:for="{{6}}">
          <view class="l-text">72分</view>
          <view class="n-text">科目</view>
        </view>
        <view class="none n-text grade-item">
          本学期还未考试哦 ~~
        </view>
      </view>
    </view>
  </view>
</view>