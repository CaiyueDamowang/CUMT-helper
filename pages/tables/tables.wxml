<view class="page-wrapper">
  <!-- 导航 -->
  <view class="nav" style="height:{{navHeight}}px;;">
    <view class="title" style="top:{{navTop}}px; padding-left:50rpx;">
      <view class="context">
        第<text>{{currentWeek}}</text>周
      </view>
      <view class="context">
        统计
      </view>
      <view class="context">
        导入
      </view>
    </view>
  </view> 
  <!-- 边界 -->
  <view class="container">
    <!-- 横列:周 -->
    <view class="week-wrap">
      <view class="row-weeks">
        <view class="week s-text txt-center" wx:for="{{weeks}}" wx:key="id">{{item.zh}}</view>
      </view>
      <view class="row-weeks">
        <view class="week s-text txt-center" wx:for="{{weeks}}" wx:key="id">{{item.en}}</view>
      </view>
    </view>
    <!-- 课程表格 -->
    <view class="lessons-wrap">
      <view wx:for="{{10}}" wx:key="id" style="border-top:1px solid #eee;" class="lesson-row"></view>
      <!-- 块:课程 -->
      <view
        class="s-text lesson"
        wx:for="{{timetable[currentWeek]}}"
        wx:key="id"
        style="top:calc({{lessonBlockMarginTop+'*'+(item.start -1)}});left:calc({{lessonBlockMarginLeft+'*' +(item.day -1)}});background:{{item.color}};"
      >
        <view>{{item.name}}</view>
        <view>{{item.room}}</view>
      </view>
    </view>
    <!-- 左侧:节次 -->
    <view class="schedule">
      <view wx:for="{{scheduls}}" wx:key="id" class="s-text schedule-item">
        <view class="item id">{{item.id}}</view>
        <view>{{item.begin}}</view>
        <view>{{item.end}}</view>
      </view>
    </view>
  </view>
</view>
