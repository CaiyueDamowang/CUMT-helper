/* 
  背景动画
 */
.backgroundColor {
  left: 0;
  top: 0;
  border-radius: 0;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(rgba(17, 218, 174, 0.295),rgba(17, 218, 174, 0.5));
}

.navbar {
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  flex-shrink: 0;
}
.s-text {
  font-size: 20rpx;
}