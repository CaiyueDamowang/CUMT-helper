.backgroundAni {
  width: 100vw;
  height: 100vh;
  position: absolute;
  z-index: -1;
  background: linear-gradient(rgba(12, 209, 134, 0.637),rgba(55, 248, 174, 0.144))
}
.nav {
  background: rgba(255, 255, 255, 0.5);
  position: relative;
  box-sizing: border-box;
}
.nav .title {
  height: 64rpx;
  position: relative;
  box-sizing: border-box;
  display: flex;
}


.context { 
  /* 显示周数 */
  line-height: 64rpx;
  color: #fff;
  font-weight: 900;
}
.container {
  background: rgba(255, 255, 255, 0.5);
  padding: 0;
  height: 100vh;
  flex: 1;
  display: flex;
  position: relative;
  flex-direction: column;
}
 /*
  行： 周    左侧margin-left：70rpx  高度： 70rpx
  背景虚化:  background: rgba(255, 255, 255, 0.5);
 */
.week-wrap {
  margin-left: 70rpx;
  height: 70rpx;
}
.row-weeks {
  height: 35rpx;
  display: flex;
}
.week {
  height: 35rpx;
  flex: 1;
}
/* 
  课程: margin-left: 70rpx;
*/
.lessons-wrap{
  margin-left: 70rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.lessons-wrap .lesson-row {
  flex: 1;
}
/* 
  左侧节次: flex:colum 
*/
.schedule {
  padding-top:70rpx;
  height: 100%;
  width: 70rpx;
  position: absolute;
  display: flex;
  flex: colum;
  flex-direction: column;
  box-sizing: border-box;
}
.schedule-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.id {
  font-weight: 900;
  color: #38f;
  font-size: 26rpx;
}
