.nav {
  background: #f3f3f3;
  position: relative;
}
.title {
  position: relative;
  display: block;
}
.btn {
  width: 50rpx;
  position: relative;
  height: 0;
  border-top: 8rpx solid #000;
}
.btn::before {
  content: "";
  width: 40rpx;
  height: 0;

  display: block;
  position: absolute;
  border-top: 8rpx solid #000;
  top: 10rpx;
}
.btn::after {
  content: "";
  width: 40rpx;
  height: 0;

  display: block;
  position: absolute;
  border-top: 8rpx solid #000;
  top: 28rpx;
}

