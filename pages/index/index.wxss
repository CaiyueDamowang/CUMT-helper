/* 登陆按钮五角星 */

.star {
  width: 0;
  height: 0;
  position: absolute;
  border-right: 10rpx solid transparent;
  border-bottom: 7rpx solid #fff;
  border-left: 10rpx solid transparent;
  transform: rotate(35deg);
  color: #fff;
}

.star::before {
  width: 0;
  height: 0;
  position: absolute;
  display: block;
  top: -5.0rpx;
  left: -5.0rpx;
  border-bottom: 8rpx solid #fff;
  border-left: 3rpx solid transparent;
  border-right: 3rpx solid transparent;
  content: '';
  transform: rotate(-35deg);
}

.star::after {
  width: 0;
  height: 0;
  position: absolute;
  display: block;
  top: 0.3rpx;
  left: -10rpx;
  color: #fff;
  border-right: 10rpx solid transparent;
  border-bottom: 7rpx solid #fff;
  border-left: 10rpx solid transparent;
  content: '';
  transform: rotate(-70deg);
}

