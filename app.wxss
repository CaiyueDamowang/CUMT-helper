@import "colorui/main.wxss";
@import "colorui/icon.wxss";
@import "colorui/animation.wxss";
@import "icon/iconfont.wxss";
@import "img/bg.wxss";

.page-wrapper {
  height: 100vh;
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.star::before {
  width: 0;
  height: 0;
  position: absolute;
  display: block;
  top: -4.5rpx;
  left: -5.0rpx;
  border-bottom: 8rpx solid #fff;
  border-left: 3rpx solid transparent;
  border-right: 3rpx solid transparent;
  content: '';
  transform: rotate(-35deg);
}

.star::after {
  width: 0;
  height: 0;
  position: absolute;
  display: block;
  top: 0.2rpx;
  left: -10rpx;
  color: #fff;
  border-right: 10rpx solid transparent;
  border-bottom: 7rpx solid #fff;
  border-left: 10rpx solid transparent;
  content: '';
  transform: rotate(-70deg);
}

.l-text {
  font-size: 34rpx;
  color: #111;
}

.n-text {
  font-size: 32rpx;
  color: #333;
}

.s-text {
  font-size: 24rpx;
  color: #666;
}

.txt-center {
  text-align: center;
}

.arrow::before{
  position: absolute;
  top: 0;
  right: 30rpx;
  bottom: 0;
  display: block;
  margin: auto;
  width: 30rpx;
  height: 30rpx;
  color: var(--grey);
  content: "\e6a3";
  text-align: center;
  font-size: 34rpx;
  font-family: "cuIcon";
  line-height: 30rpx;
}

.back-white {
  background: rgba(255, 255, 255, 0.9);
}

.backgroundColor {
  height: 800rpx;
  width: 1800rpx;
  z-index: -1;
  position: fixed;
  top: -200rpx;
  left: -200rpx;
  border-radius: 50%;
  background: linear-gradient(#f67280, #9198e5);
}
.margin-top {
  margin-top: 40rpx;
}