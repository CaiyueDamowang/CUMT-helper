.page-wrapper {
  height: 100vh;
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.container {
  height: 100%;
  display: flex;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 背景 */
.backgroundColor {
  height: 800rpx;
  width: 1800rpx;
  z-index: -1;
  position: fixed;
  top: -200rpx;
  left: -200rpx;
  border-radius: 50%;
  /* background: -webkit-linear-gradient(#89bef060, #7781f0); */
  background: linear-gradient(175deg,rgba(194,240,252, 0.575),rgb(13, 148, 182));
  box-shadow: 0px 3px 8px #777;
}
/* 登陆按钮五角星 */

.star {
  width: 0;
  height: 0;
  position: absolute;
  border-right: 10rpx solid transparent;
  border-bottom: 7rpx solid #fff;
  border-left: 10rpx solid transparent;
  transform: rotate(35deg);
  color: #fff;
}

.star::before {
  width: 0;
  height: 0;
  position: absolute;
  display: block;
  top: -4.5rpx;
  left: -5.0rpx;
  border-bottom: 8rpx solid #fff;
  border-left: 3rpx solid transparent;
  border-right: 3rpx solid transparent;
  content: '';
  transform: rotate(-35deg);
}

.star::after {
  width: 0;
  height: 0;
  position: absolute;
  display: block;
  top: 0.2rpx;
  left: -10rpx;
  color: #fff;
  border-right: 10rpx solid transparent;
  border-bottom: 7rpx solid #fff;
  border-left: 10rpx solid transparent;
  content: '';
  transform: rotate(-70deg);
}

