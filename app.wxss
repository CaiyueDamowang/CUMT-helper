.page-wrapper {
  height: 100vh;
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 背景 */
.backgroundColor {
  height: 800rpx;
  width: 1800rpx;
  z-index: -1;
  position: fixed;
  top: -200rpx;
  left: -200rpx;
  border-radius: 50%;
  background: linear-gradient(#f67280, #9198e5);
}
.s-text {
  font-size: 24rpx;
  color: #666;
}
.txt-center{
  text-align: center;
}